{# Pagination #}
<nav aria-label="Page navigation pagination">
    <ul class="pagination justify-content-around">
        {% if currentPage is same as 1 %}
            <li class="page-item disabled"><a class="page-link" href="{{ path('app_tweets_pagination', {'page': currentPage - 1 }) }}"><i class="bi bi-chevron-left"></i></a></li>
        {% else %}
            <li class="page-item"><a class="page-link" href="{{ path('app_tweets_pagination', {'page': currentPage - 1 }) }}"><i class="bi bi-chevron-left"></i></a></li>
        {% endif %}

        {% if maxTweets %}
            <li class="page-item"><a class="page-link" href="{{ path('app_tweets_pagination', {'page': currentPage + 1}) }}"><i class="bi bi-chevron-right"></i></a></li>
        {% else %}
            <li class="page-item disabled "><a class="page-link" href="{{ path('app_tweets_pagination', {'page': currentPage + 1}) }}"><i class="bi bi-chevron-right"></i></a></li>
        {% endif %}
    </ul>
</nav>